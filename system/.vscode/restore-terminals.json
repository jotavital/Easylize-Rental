{
    "artificialDelayMilliseconds": 300,
    "keepExistingTerminalsOpen": false,
    "runOnStartup": true,
    "terminals": [
        {
            "splitTerminals": [
                {
                    "name": "serve",
                    "commands": [
                        "php artisan optimize",
                        "php artisan serve --port=8000"
                    ]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "watch",
                    "commands": [
                        "npm run watch"
                    ]
                }
            ]
        }
    ]
}